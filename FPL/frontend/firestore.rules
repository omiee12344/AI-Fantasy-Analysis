rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own team data
    match /userTeams/{teamId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Users can read and write their own transfers
    match /transfers/{transferId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Users can read and write their own leagues
    match /leagues/{leagueId} {
      allow read, write: if request.auth != null && 
        (resource.data.adminUserId == request.auth.uid || 
         request.auth.uid in resource.data.memberUserIds);
    }
    
    // Public read access to player data (read-only)
    match /players/{playerId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public read access to fixtures (read-only)
    match /fixtures/{fixtureId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Public read access to gameweeks (read-only)
    match /gameweeks/{gameweekId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}